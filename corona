create table hospital (
	codhos integer primary key,
	nomhosp varchar(255) not null,
	telef varchar(12) not null,
	esthos varchar(2) not null,
	cidhos varchar(255) not null,
	ruahos varchar(255) not null
);

insert into hospital values (
1, 'Hospital Maria das Dores', '499840221300', 'SC', 'Romelandia', 'Avenida Brasil'
);


create table paciente (
	codpac integer primary key,
	nomepac varchar(255) not null,
	cpfpac varchar(11)not null unique,
	sexpac varchar(1) not null,
	telpac varchar(255) not null,
	datanasc date not null,
	peso integer not null,
	suspeito varchar(1) not null,
	positivado varchar(1) not null,
	
	codhos integer REFERENCES hospital(codhos)
);

select * from paciente;

insert into paciente values (
6, 'Zizi Boy', '02214511041', 'F', '47994711414', 85, 'S', 'S', 1, '2002-09-22'
);

create table cidade (
	codcid integer primary key,
	nomecid varchar(80),
	est varchar(80)
);

