create table endereco (
	rua varchar(255) not null,
	bairro varchar(255) not null,
	comp varchar(255),
	num integer,
	codpac integer REFERENCES paciente(codpac),
	codcid integer REFERENCES cidade(codcid)
);

insert into sintomas values(
3, 'Dor de cabe√ßa'
);

create table sintomas (
	codsint integer primary key,
	nomesint varchar (255) not null
);

insert into paciente_sintomas values(
	4, 3
);

create table paciente_sintomas (
	codpac integer REFERENCES paciente(codpac),
	codsint integer REFERENCES sintomas(codsint)
);

create table questionario (
	pesopac decimal(5,2) not null,
	altpac decimal(5,2) not null,
	bebe varchar(1) not null,
	fuma varchar(1) not null,
	relacsex varchar(1) not null,
	tipsang varchar(3) not null,
	
	codpac integer REFERENCES paciente(codpac)
);
